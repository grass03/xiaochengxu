/*nav  */
.nav {
  width: 100%;
  height: 90rpx;
  background-color: #e8e8e8;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #222;
}
.nav_title {
  width: 50%;
  text-align: center;
  float: left;
}
/*content  */
.con_section{
  width:93%;
  margin: 0 auto;
}
.content_massge:last-child {
  border-bottom: none;
}
.content_massge {
   margin-top:15px;
   width: 100%;
   height: 120rpx; 
   border-bottom: 1px solid #eee;
   padding-bottom: 25rpx;
}
.con_images image {
  width: 180rpx;
  height: 120rpx;
  float: left;
}
.con_text {
  float: left;
  margin-left: 20rpx;
  width: 70%;
  height: 120rpx;
  text-align: left;
  
}
.con_text .title {
  width: 100%;
  height: 42rpx; 
  font-size: 30rpx;
  color: #111;
  overflow: hidden;
}
