/* pages/Mycourse/Mycourse.wxss */

.titleBtn {
  width: 100%;
  height: 50rpx;
  background-color: #f7f7f7;
  box-shadow: 3px 3px 4px #ddd;
  padding: 15rpx 0;
  position: fixed;
  top: 0;
}
.btnList{
  width: 340rpx;
  height: 50rpx;
  margin: 0 auto;
  border: 1px solid #ff6161;
  border-radius: 10rpx;
}
.btn-return {
  width: 25rpx;
  height: 35rpx;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
}
.btn-return image {
  width: 100%;
  height: 100%;
}
.btnList view{
  width: 50%;
  height: 100%;
  text-align: center;
  float: left;
  font-size: 32rpx;
  line-height:50rpx;
}
.btnList view:first-child{
  color: #ff6161;
  background: #fff;
  border-radius: 10rpx 0 0 10rpx;
}
.btnList view:last-child{
  color:#fff;
  background: #ff6161;
  border-radius:0 10rpx 10rpx 0;
}
.content{
  width: 100%;
  margin: 0 auto;
  border-bottom: 1px solid #ededed;
  height: 140rpx; 
  padding: 30rpx 20rpx;
}
.content image{
  width: 140rpx;
  height: 140rpx;
  float: left;
}
.textCon {
  display: inline-block;
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #666;
  margin-top:10rpx;
}
.Price {
  color: #ff6161;
  font-size: 28rpx;
  margin-top: 20rpx;
}
