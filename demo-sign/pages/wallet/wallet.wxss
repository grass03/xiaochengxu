/* pages/wallet/wallet.wxss */
.ban-box {
  width: 100%;
  height: 350rpx;
  background: #FF6161;
}
.nav {
  width: 100%;
  height: 80rpx;
  text-align: center;
  font-size: 36rpx; 
  line-height: 80rpx;
  color: #fff;
  position: relative;
}
.icon-btn {
  width: 1rem;
  height: 1rem;
  line-height: 1rem;
  position: absolute;
  top:18rpx;
  left:.45rem;
}
.icon-btn image {
  width: .6rem;
  height: 1rem;
}
.ban-con {
  width: 35%;
  margin: 0 auto;
  text-align: center;
  padding-top: 30rpx;
}
.ban-con text {
  font-size: 54rpx;
  color: #fff;
}
.btn {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top:.6rem;
}
.btn view {
  width: 3.2rem;
  height: 1.6rem;
  background-color: #FFB131; 
  text-align: center;
  line-height: 1.6rem;
  font-size: .9rem;
  color: #fff;
  border-radius: .3rem;
}
.chongzhi {
  margin-top: 8rpx;
  background-color: #fff; 
  padding: 0 25rpx;
  /* border-bottom: 1px solid #ededed; */
}
.chongzhi text {
  display: block;
  padding: 25rpx 0;
  border-bottom: 1px solid #ededed;
  font-size: 32rpx;
  color: #666;
}

