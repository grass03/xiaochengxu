/* pages/porson/porson.wxss */
.topCon {
  width: 100%;
   padding: 50rpx 30rpx; 
  height: 200rpx;
 background: linear-gradient(to right, #2172ff , #2d9efe)
}
.information {
  width: 100%;
  height: 100%;
  margin-top: 30rpx;
}
.imgHad {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  float: left;
  overflow: hidden;
}
.imgHad image {
  width: 120rpx;
  height: 120rpx;
}
.context {
  width: 72%;
  height: 200rpx;
  float: left;
  padding-left: 20rpx;
}
.name {
  font-size: 32rpx;
  color: #fff;
}
.troduce {
  font-size: 26rpx;
  color: #fff;
  margin-top: 8rpx;
}
.troduce text{
  display: block;
  margin-top: 6rpx;
}
.left {
  width: 50%;
  float: left;
}
.right {
  width: 50%;
  float: right;
}
/*icon  */
.conlist {
  width: 94%;
  margin: 0 auto;
  padding-top: 40rpx;
}
.list {
  width: 100%;
  height: 150rpx;
  border-bottom: 1px solid #dedede;
  padding-top: 40rpx;
  display: flex;
  justify-content: space-around;
}
.list_on {
  width: 150rpx;
  height: 150rpx;
  text-align: center;
  color: #666;
  font-size: 26rpx;
}
.list_on image {
  width: 80rpx;
  height: 70rpx;
  margin: 0 auto;
  display: block;
}