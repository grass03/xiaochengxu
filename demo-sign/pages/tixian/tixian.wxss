/* pages/wallet/wallet.wxss */
.ban-box {
  width: 100%;
  background: #F7F7F7;
  box-shadow: 6rpx 6rpx 10rpx #d7d7d7;
}
.nav {
  width: 100%;
  height: 80rpx;
  text-align: center;
  font-size: 36rpx; 
  line-height: 80rpx;
  color: #666;
  position: relative;
}
.icon-btn {
  width: 1rem;
  height: 1rem;
  line-height: 1rem;
  position: absolute;
  top:19rpx;
  left:.45rem;
}
.icon-btn image {
  width: .6rem;
  height: 1rem;
}
.tixain {
  width: 94%;
  margin: 0 auto;
  padding-top: 40rpx; 
}
.tixLiast {
  width: 100%;
  /* padding: 5rpx 0; */
  
}
.tixLiast text {
  font-size:34rpx;
  color: #666;
  float: left;
}
.tixLiast input {
  width: 70%;
  /* height: 40rpx;
  border: 1px solid red; */
  font-size: 32rpx;
  color: #666;
  padding-left: 10rpx;
  margin-top: -1rpx;
  display: inline-block;
}
.tiaJin {
  margin-top: 20rpx;
  border-bottom: 1px solid #e6e6e6;
  padding-bottom: 40rpx;
  margin-bottom: 30rpx;
}
.tiaJin text {
  display: block;
  float: none;
}
.left {
  float: left;
  color: #666;
  font-weight: none;
  font-size: 30rpx;
  margin-top: 18rpx;
}
.tiaJin input {
  display: block;
  font-size: 32rpx;
  color:#FF6161;
  padding: none;
  margin-top: 10rpx;
}
.btn {
  width: 100%;
  height: 75rpx;
  border-radius: 10rpx;
  background-color: #FF6161;
  line-height: 75rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  margin-top: 80rpx;
  display: inline-block;
}
